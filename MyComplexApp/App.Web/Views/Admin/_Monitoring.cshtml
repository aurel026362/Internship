@model App.Web.Models.ComplexViewModel.Admin.UserProfileListViewModel
@{
    ViewData["Title"] = "_Monitoring";
}

<div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-profile-tab" data-toggle="tab" href="#divUsers" role="tab" aria-controls="nav-profile" aria-selected="false">Users</a>
            <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href="#divTMarks" role="tab" aria-controls="nav-home" aria-selected="true">Theme Marks</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#divEMarks" role="tab" aria-controls="nav-profile" aria-selected="false">Exam Marks</a>

        </div>
    </nav>
    <div class="container-fluid text-center">
        <div class="row bg-first">
            <p>
                My problem is that after translating up the image, the div that contains it remains
                unchanged, and has lots of white space in the place where the image used to be.
            </p>
        </div>
        <div class="clearfix"></div>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="profile-tab" id="divUsers">
                <div class="row">
                    <div class="col-md-10 col-sm-8 col-xs-12 div-padding-vertical"></div>
                    <div class="col-md-2 col-sm-4 col-xs-12 div-padding-vertical">
                        <button class="btn btn-outline-warning btn-sm form-control" data-toggle="modal" data-target="#modal-requested-users" id="button-requested-users">Requested Users</button>
                        <div class="modal fade" id="modal-requested-users" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Adding Mark</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body text-left">
                                        <table id="table-requested-users" class="table table-sm">
                                            <thead>
                                                <th>Id</th>
                                                <th>Name</th>
                                                <th>EMail</th>
                                                <th>PhoneNumber</th>
                                                <th>Date of Birth</th>
                                                <th>Type User</th>
                                                <th>Confirmation</th>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Id
                                    </th>
                                    <th>
                                        EMail
                                    </th>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Date of Birth
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-user"></i> @item.EMail</a>
                                        </td>
                                        <td>
                                            @item.FirstName
                                        </td>
                                        <td>
                                            @item.LastName
                                        </td>
                                        <td>
                                            @item.PhoneNumber
                                        </td>
                                        <td>
                                            @item.DateOfBirth.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Details / <i class="far fa-edit"></i> Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("../Menthor/_Marks", Model.UserProfile)
            <script>
                $("#divTMarks").removeClass("show");
                $("#divTMarks").removeClass("active");

                $(document).ready(function () {
                    $("#button-requested-users").bind("click", function () {
                        $.ajax({
                            url: "/User/GetRequestedUsers",
                            type: "GET",
                            datatype: "json",
                            success: function (data) {
                                $('#table-requested-users > tbody').empty();
                                $.each(data, function (i, item) {
                                    $('<tr>').append(
                                        $('<td>').text(item.user.id),
                                        $('<td>').text(item.user.firstName + " " + item.user.lastName),
                                        $('<td>').text(item.user.eMail),
                                        $('<td>').text(item.user.phoneNumber),
                                        $('<td>').text(item.user.dateOfBirth),
                                        $('<td>').text(item.role),
                                        $('<td>').html("<button class='requested-user-accept btn-sm btn-success' id='" + item.user.id + "'>Accept</button> <button class='requested-user-decline btn-sm btn-danger' id='" + item.user.id +"'>Decline</button>")
                                    ).appendTo('#table-requested-users');
                                });

                                $(".requested-user-accept").bind("click", function () {
                                    alert("asd");
                                    var id = $(this).attr('id');
                                    $.ajax({
                                        url: "/User/AddRequestedUser",
                                        type: "POST",
                                        datatype: "json",
                                        data: ({ requestedUserId: id }),
                                        success: function () {
                                            alert("success");
                                        },
                                        error: function () {
                                            alert("error");
                                        }
                                    });
                                });

                                $(".requested-user-decline").bind("click", function () {
                                    alert("asd");
                                    var id = $(this).attr('id');
                                    $.ajax({
                                        url: "/User/RemoveRequestedUser",
                                        type: "POST",
                                        datatype: "json",
                                        data: ({ requestedUserId: id }),
                                        success: function () {
                                            alert("success");
                                        },
                                        error: function () {
                                            alert("error");
                                        }
                                    });
                                });
                            },
                            error: function () {

                            }
                        });
                        
                    });

                    
                });
            </script>
        </div>
    </div>
</div>