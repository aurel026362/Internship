    <form>
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Name" required/>
        <span asp-validation-for="Name"></span>
        <input asp-for="DateStart" required/>
        <span asp-validation-for="DateStart"></span>
        <input type="submit" id="trimite"/>
    </form>

