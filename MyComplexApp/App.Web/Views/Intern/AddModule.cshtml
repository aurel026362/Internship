</html>
<script>
    $(document).ready(function () { 
        $("#trimite").on("click", function () {
            alert("oIntrat");
            $.ajax({
                url: "Intern/AddModule",
                type: "POST",
                datatype: "json",
                data: JSON.stringify({
                    Name: $("#Name").val(), DateStart: $("#DateStart").val()
                }),
                success: function () {
                    alert("SUCCESS");
                },
                failure: function () {
                    alert("FAILURE");
                }
            });
        });
    });
</script>